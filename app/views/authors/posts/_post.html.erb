<tr>
  <td><%= link_to post.title, authors_post_path(post)%></td>
  <%if post.published?%>
    <td><%= link_to 'Unpublish', unpublish_authors_post_path(post), method: :put, class:'btn btn-md btn-primary'%></td>
  <%else%>
      <td><%= link_to 'Publish', publish_authors_post_path(post), method: :put, class:'btn btn-md btn-success'%></td>
  <%end%>
  <td><%= link_to 'Edit', edit_authors_post_path(post), class:'btn btn-md btn-warning'%></td>
  <td><%= link_to 'Remove', authors_post_path(post), method: :delete, data:
  {confirm:'Are you sure ?'}, class:'btn btn-md btn-danger'%></td>
</tr>
