<%= form_for(post, url: url) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, id: :post_title, class: 'form-control' %>
      </div>
      <div class="field">
        <%= form.label :banner_image_url %>
        <%= form.text_field :banner_image_url , class: 'form-control'%>
      </div>
      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description, id: :post_description , class: 'form-control'%>
      </div>
       <div class="field">
        <%= form.label :Tag %> <span>-(Separated by commas.)</span>
        <%= form.text_area :tag_list, id: :post_tag_list, class: 'form-control'%>
      </div>
    </div>
    <div class="col-md-9">
      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body, id: :post_body, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
